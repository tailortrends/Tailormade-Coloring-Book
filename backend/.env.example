# ── TailorMade Coloring Book — Environment Variables ──────────────────────────
# Copy this file to .env and fill in your values.
# NEVER commit .env to git.

# ── fal.ai ────────────────────────────────────────────────────────────────────
# Get from: https://fal.ai/dashboard/keys
FAL_KEY=your_fal_api_key_here
FAL_MODEL=fal-ai/flux/dev                   # or fal-ai/flux-2 for faster/cheaper

# ── Anthropic (content filtering) ─────────────────────────────────────────────
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# ── Firebase ──────────────────────────────────────────────────────────────────
# Path to your downloaded Firebase service account JSON
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
# Get from: Firebase Console → Project Settings → General
FIREBASE_PROJECT_ID=tailormade-coloring-book

# ── Cloudflare R2 (image + PDF storage) ───────────────────────────────────────
# Get from: Cloudflare Dashboard → R2 → Manage R2 API Tokens
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=tailormade-coloring-book
R2_PUBLIC_URL=https://pub-xxxx.r2.dev         # Your R2 public bucket URL

# ── App Config ────────────────────────────────────────────────────────────────
APP_ENV=development                           # development | production
CORS_ORIGINS=http://localhost:5173            # Vue dev server; add prod URL in production
SECRET_KEY=change_this_to_a_random_string_in_production

# ── Rate Limits ────────────────────────────────────────────────────────────────
FREE_DAILY_LIMIT=1
PREMIUM_DAILY_LIMIT=10
